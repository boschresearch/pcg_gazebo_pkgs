{% import 'pcg_libraries'|find_ros_package ~ '/sdf/physics.sdf.jinja' as physics_macros %}

{% macro ground_plane(
    sdf_version=1.5,
    name='ground_plane',
    mu=1.0, 
    mu2=1.0,
    slip1=0.0,
    slip2=0.0,
    friction=1.0,
    friction2=1.0,
    fdir1=[0, 0, 0],
    rolling_friction=1.0,
    soft_cfm=0.0,
    soft_erp=0.2,
    kp=1000000000000,
    kd=1.0,
    max_vel=0.01,
    min_depth=0.0,
    split_impulse=1,
    split_impulse_penetration_threshold=-0.01
)
%}

    <model name="{{ name }}">
        <static>true</static>
        <link name="link">
            <visual name="visual">
                <cast_shadows>false</cast_shadows>
                <geometry>
                    <plane>
                        <normal>0 0 1</normal>
                        <size>100 100</size>
                    </plane>
                </geometry>
                <material>
                    <script>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                        <name>Gazebo/Grey</name>
                    </script>
                </material>
            </visual>

            <collision name="collision">
                <geometry>
                    <plane>
                        <normal>0 0 1</normal>
                        <size>100 100</size>
                    </plane>
                </geometry>
                <surface>
                    {{ physics_macros.collision_friction_properties(
                        sdf_version=sdf_version,
                        mu=mu, 
                        mu2=mu2,
                        slip1=slip1,
                        slip2=slip2,
                        friction=friction,
                        friction2=friction2,
                        fdir1=fdir1,
                        rolling_friction=rolling_friction
                    ) }}

                    {{ physics_macros.collision_contact_properties(
                        sdf_version=sdf_version,
                        soft_cfm=soft_cfm,
                        soft_erp=soft_erp,
                        kp=kp,
                        kd=kd,
                        max_vel=max_vel,
                        min_depth=min_depth,
                        split_impulse=split_impulse,
                        split_impulse_penetration_threshold=split_impulse_penetration_threshold
                    ) }}
                </surface>
            </collision>
        </link>
    </model>

{% endmacro %}