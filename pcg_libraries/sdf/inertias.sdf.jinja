{% macro solid_sphere_inertia(mass, radius) %}
    <inertia>
        <ixx>{{ 2.0 / 5.0 * mass * radius**2 }}</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>{{ 2.0 / 5.0 * mass * radius**2 }}</iyy>
        <iyz>0</iyz>
        <izz>{{ 2.0 / 5.0 * mass * radius**2 }}</izz>
    </inertia>
{% endmacro %}

{% macro hollow_sphere_inertia(mass, radius) %}
    <inertia>
        <ixx>{{ 2.0 / 3.0 * mass * radius**2 }}</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>{{ 2.0 / 3.0 * mass * radius**2 }}</iyy>
        <iyz>0</iyz>
        <izz>{{ 2.0 / 3.0 * mass * radius**2 }}</izz>
    </inertia>
{% endmacro %}

{% macro ellipsoid_inertia(mass, axis_length_x, axis_length_y, axis_length_z) %}
    <inertia>
        <ixx>{{ 1.0 / 5.0 * mass * axis_length_y**2 + 1.0 / 5.0 * mass * axis_length_z**2 }}</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>{{ 1.0 / 5.0 * mass * axis_length_x**2 + 1.0 / 5.0 * mass * axis_length_z**2 }}</iyy>
        <iyz>0</iyz>
        <izz>{{ 1.0 / 5.0 * mass * axis_length_x**2 + 1.0 / 5.0 * mass * axis_length_y**2 }}</izz>
    </inertia>
{% endmacro %}


{% macro cuboid_inertia(mass, length_x, length_y, length_z) %}
    <inertia>
        <ixx>{{ 1.0 / 12.0 * mass * length_y**2 + 1.0 / 12.0 * mass * length_z**2 }}</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>{{ 1.0 / 12.0 * mass * length_x**2 + 1.0 / 12.0 * mass * length_z**2 }}</iyy>
        <iyz>0</iyz>
        <izz>{{ 1.0 / 12.0 * mass * length_x**2 + 1.0 / 12.0 * mass * length_y**2 }}</izz>
    </inertia>
{% endmacro %}

{% macro solid_cylinder_inertia(mass, radius, length, axis) %}
    {% if axis == "x" %}
        <inertia>
            <ixx>{{ 0.5 * mass * radius**2 }}</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>{{ 3.0 * 1.0 / 12.0 * mass * radius**2 + 1.0 / 12.0 * mass * length**2 }}</iyy>
            <iyz>0</iyz>
            <izz>{{ 3.0 * 1.0 / 12.0 * mass * radius**2 + 1.0 / 12.0 * mass * length**2 }}</izz>
        </inertia>
    {% elif axis == "y" %}
        <inertia>
            <ixx>{{ 3.0 * 1.0 / 12.0 * mass * radius**2 + 1.0 / 12.0 * mass * length**2 }}</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>{{ 0.5 * mass * radius**2 }}</iyy>
            <iyz>0</iyz>
            <izz>{{ 3.0 * 1.0 / 12.0 * mass * radius**2 + 1.0 / 12.0 * mass * length**2 }}</izz>
        </inertia>
    {% else %}
        <inertia>
            <ixx>{{ 3.0 * 1.0 / 12.0 * mass * radius**2 + 1.0 / 12.0 * mass * length**2 }}</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>{{ 3.0 * 1.0 / 12.0 * mass * radius**2 + 1.0 / 12.0 * mass * length**2 }}</iyy>
            <iyz>0</iyz>
            <izz>{{ 0.5 * mass * radius**2 }}</izz>
        </inertia>
    {% endif %}
{% endmacro %}